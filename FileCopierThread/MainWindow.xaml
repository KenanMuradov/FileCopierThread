<Window x:Class="FileCopierThread.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileCopierThread"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBox 
                x:Name="txtFrom"
                Height="30" 
                Margin="20" 
                Width="400" 
                HorizontalAlignment="Left" 
                BorderThickness="2" 
                materialDesign:HintAssist.Hint ="Copy From"
                materialDesign:HintAssist.HintOpacity="0.75"/>

            <Button 
                x:Name="btnFrom"
                Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                Content="Select Path" 
                Foreground="Black" 
                BorderBrush="Black" Click="btnFrom_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox 
                x:Name="txtTo"
                Height="30" 
                Margin="20" 
                Width="400" 
                HorizontalAlignment="Left" 
                BorderThickness="2" 
                materialDesign:HintAssist.Hint ="Copy To"
                materialDesign:HintAssist.HintOpacity="0.75"/>

            <Button 
                x:Name="btnTo"
                Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                Content="Select Path" 
                Foreground="Black" 
                BorderBrush="Black" Click="btnTo_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <ProgressBar 
                Style="{StaticResource MaterialDesignLinearProgressBar}" 
                Margin="20 0" 
                Height="20" 
                VerticalAlignment="Center" 
                Width="300"/>

            <Button 
                x:Name="btnCopy"
                Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                Content="Copy" 
                Foreground="Black" 
                BorderBrush="Black" Click="btnCopy_Click"/>
        </StackPanel>

    </Grid>
</Window>
